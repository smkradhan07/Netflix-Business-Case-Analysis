import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

sns.set(style="whitegrid")

netflix = pd.read_csv("netflix.csv")

# ----------------------------------------------------------
# Preprocessing
# ----------------------------------------------------------

def unnest_column(df, column):
    df[column] = df[column].str.split(", ")
    return df.explode(column)

df_countries = unnest_column(netflix.copy(), "country")

# Extract movie duration
netflix['duration_min'] = netflix[netflix['type'] == "Movie"]['duration'].str.extract('(\d+)').astype(float)

# ----------------------------------------------------------
# Univariate Analysis
# ----------------------------------------------------------

plt.figure(figsize=(10,5))
sns.histplot(netflix['release_year'], bins=30, kde=True)
plt.title("Release Year Distribution")
plt.show()

plt.figure(figsize=(6,4))
sns.countplot(data=netflix, x='type')
plt.title("Movies vs TV Shows")
plt.show()

plt.figure(figsize=(12,6))
sns.countplot(data=netflix, x='rating',
              order=netflix['rating'].value_counts().index)
plt.xticks(rotation=90)
plt.title("Rating Distribution")
plt.show()

plt.figure(figsize=(8,4))
sns.histplot(netflix['duration_min'].dropna(), bins=20, kde=True)
plt.title("Movie Duration Distribution")
plt.show()

# ----------------------------------------------------------
# Bivariate Analysis
# ----------------------------------------------------------

plt.figure(figsize=(8,5))
sns.boxplot(data=netflix, x='type', y='release_year')
plt.title("Type vs Release Year")
plt.show()

plt.figure(figsize=(12,5))
sns.boxplot(data=netflix, x='rating', y='release_year')
plt.xticks(rotation=90)
plt.title("Rating vs Release Year")
plt.show()
