import pandas as pd

netflix = pd.read_csv("netflix.csv")

# Release Year Concentration
year_distribution = netflix['release_year'].value_counts().sort_index()

print("Last 15 Years Growth:")
print(year_distribution.tail(15))

# Type Distribution Trend
print("\nMovies vs TV Shows:")
print(netflix['type'].value_counts())

# Rating Insights
print("\nTop Ratings:")
print(netflix['rating'].value_counts().head(5))
