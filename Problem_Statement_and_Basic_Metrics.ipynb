# Import necessary libraries
import pandas as pd
import numpy as np

# Load dataset
netflix = pd.read_csv("netflix.csv")

# ----------------------------------------------------------
# 1. Dataset Shape
# ----------------------------------------------------------
print("Dataset Shape (Rows, Columns):")
print(netflix.shape)

# ----------------------------------------------------------
# 2. Total Unique Show IDs
# ----------------------------------------------------------
print("\nTotal Unique Show IDs:")
print(netflix['show_id'].nunique())

# ----------------------------------------------------------
# 3. Content Type Distribution
# ----------------------------------------------------------
print("\nContent Type Distribution:")
print(netflix['type'].value_counts())

# ----------------------------------------------------------
# 4. Global Production Hubs
# ----------------------------------------------------------
print("\nTop 10 Production Countries:")
print(netflix['country'].value_counts().head(10))

# ----------------------------------------------------------
# 5. Release Year Range
# ----------------------------------------------------------
print("\nRelease Year Range:")
print("Min Year:", netflix['release_year'].min())
print("Max Year:", netflix['release_year'].max())

# ----------------------------------------------------------
# 6. Genre Diversity
# ----------------------------------------------------------
print("\nTop 10 Genres:")
print(netflix['listed_in'].value_counts().head(10))

# ----------------------------------------------------------
# 7. Rating System Overview
# ----------------------------------------------------------
print("\nRating Distribution:")
print(netflix['rating'].value_counts())
