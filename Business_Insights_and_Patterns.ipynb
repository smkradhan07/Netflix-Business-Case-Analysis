import pandas as pd

netflix = pd.read_csv("netflix.csv")

# Convert date_added
netflix['date_added'] = pd.to_datetime(netflix['date_added'], errors='coerce')
netflix['added_month'] = netflix['date_added'].dt.month_name()
netflix['added_year'] = netflix['date_added'].dt.year

# Monthly additions
print("Monthly Additions:")
print(netflix['added_month'].value_counts())

# Unnest country and genre
netflix_exploded = netflix.assign(
    country=netflix['country'].str.split(', '),
    listed_in=netflix['listed_in'].str.split(', ')
).explode('country').explode('listed_in')

# Country Specialization
print("\nTop Genres in Japan:")
print(netflix_exploded[netflix_exploded['country']=="Japan"]['listed_in'].value_counts().head(3))

print("\nTop Genres in India:")
print(netflix_exploded[netflix_exploded['country']=="India"]['listed_in'].value_counts().head(3))

# Co-productions
coproductions = netflix['country'].str.contains(',').sum()
print("\nMulti-country Co-productions:", coproductions)
