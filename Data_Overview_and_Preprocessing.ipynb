# ==========================================================
# Question 2: Data Types, Missing Values, Summary Stats
# ==========================================================

import pandas as pd
import numpy as np

netflix = pd.read_csv("netflix.csv")

# ----------------------------------------------------------
# 1. Dataset Shape
# ----------------------------------------------------------
print("Shape of Dataset:")
print(netflix.shape)

# ----------------------------------------------------------
# 2. Data Types
# ----------------------------------------------------------
print("\nData Types:")
print(netflix.dtypes)

# ----------------------------------------------------------
# 3. Convert Categorical Columns
# ----------------------------------------------------------
categorical_cols = ['type', 'rating']
for col in categorical_cols:
    netflix[col] = netflix[col].astype('category')

print("\nUpdated Data Types:")
print(netflix[categorical_cols].dtypes)

# ----------------------------------------------------------
# 4. Missing Values
# ----------------------------------------------------------
print("\nMissing Values Count:")
print(netflix.isnull().sum())

# ----------------------------------------------------------
# 5. Statistical Summary
# ----------------------------------------------------------
print("\nNumerical Summary:")
print(netflix.describe())

print("\nCategorical Summary:")
print(netflix.describe(include=['object', 'category']))
