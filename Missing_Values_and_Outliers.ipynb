# Question 5: Missing Values & Outlier Check
# ==========================================================

import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

netflix = pd.read_csv("netflix.csv")

# Missing Values
missing_data = netflix.isnull().sum()
missing_percent = (missing_data / len(netflix)) * 100

print("Missing Value Summary:")
print(pd.concat([missing_data, missing_percent],
                axis=1, keys=["Total", "Percent"]))

# Extract duration
netflix['duration_min'] = netflix[netflix['type'] == "Movie"]['duration'].str.extract('(\d+)').astype(float)

# Outlier Check
plt.figure(figsize=(12,5))

plt.subplot(1,2,1)
sns.boxplot(x=netflix['release_year'])
plt.title("Release Year Outliers")

plt.subplot(1,2,2)
sns.boxplot(x=netflix['duration_min'])
plt.title("Movie Duration Outliers")

plt.tight_layout()
plt.show()

# TV Show Season Outliers
print("\nTV Show Season Distribution (Tail):")
print(netflix[netflix['type']=="TV Show"]['duration'].value_counts().tail(10))
